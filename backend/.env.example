# Copy this file to .env and fill values for production

# Django Settings
SECRET_KEY=replace-with-secret-key
DEBUG=False
ALLOWED_HOSTS=your.domain.com

# Database (optional - leave empty to use SQLite)
DATABASE_URL=

# JWT Settings
JWT_ACCESS_MINUTES=60
JWT_REFRESH_DAYS=1

# Email (SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_smtp_user
EMAIL_HOST_PASSWORD=your_smtp_password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=no-reply@example.com

# Frontend URL
FRONTEND_URL=http://localhost:5173

# CORS (for production)
CORS_ALLOWED_ORIGINS=

# OAuth - Google
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Authorized redirect URI: http://localhost:8000/auth/complete/google-oauth2/
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=YOUR_GOOGLE_CLIENT_ID
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# OAuth - Facebook
# Get credentials from: https://developers.facebook.com/apps/
# Valid OAuth Redirect URI: http://localhost:8000/auth/complete/facebook/
SOCIAL_AUTH_FACEBOOK_KEY=YOUR_FACEBOOK_APP_ID
SOCIAL_AUTH_FACEBOOK_SECRET=YOUR_FACEBOOK_APP_SECRET

# Sentry (optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0
SENTRY_SEND_PII=False
